<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- EditText for user input -->
    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your text here"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/inputEditText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- TextView to display output -->
    <TextView
        android:id="@+id/outputTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output will appear here"
        android:textSize="16sp"
        android:layout_below="@id/submitButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Additional TextView 1 -->
    <TextView
        android:id="@+id/outputTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional output 1"
        android:textSize="16sp"
        android:layout_below="@id/outputTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Additional TextView 2 -->
    <TextView
        android:id="@+id/outputTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional output 2"
        android:textSize="16sp"
        android:layout_below="@id/outputTextView2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Additional TextView 3 -->
    <TextView
        android:id="@+id/outputTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional output 3"
        android:textSize="16sp"
        android:layout_below="@id/outputTextView3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Additional TextView 3 -->
    <TextView
        android:id="@+id/outputTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trust Score"
        android:textSize="16sp"
        android:layout_below="@id/outputTextView4"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
